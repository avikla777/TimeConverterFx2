<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="16" vgap="16" >
    <padding>
        <Insets bottom="16" right="16"/>
    </padding>

        <GridPane vgap="2" hgap="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Departure" styleClass="header" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

            <Label text="Time Zone" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

            <ComboBox fx:id="deparuteTimeZone"
                    GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>

            <Label text="Date" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Time" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <TextField fx:id="departureDate"
                       GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            <TextField fx:id="departureTime"
                       GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        </GridPane>
        <GridPane vgap="2" hgap="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <Label text="Arrival" styleClass="header" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

            <Label text="Time Zone" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
            <ComboBox fx:id="arrivalTimeZone"
                    GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
            <Label text="Date" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Time" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        </GridPane>
        <Button text="Calculate" onAction="#calculate"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Duration" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="result"
                   GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <stylesheets>
        <URL value="@sample.css"/>
    </stylesheets>
    </GridPane>

